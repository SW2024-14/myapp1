<h1>ログイン</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "current-password" %>
  </div>

  <%= form.submit "ログイン" %>
<% end %>